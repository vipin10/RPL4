<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="radiant.rpl.radiantrpl">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/testalogo"
        android:label="@string/app_name"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:roundIcon="@drawable/testalogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.radiant.rpl.testa.ExamSection.TestQuestion"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1" />
        <activity android:name="com.radiant.rpl.testa.StudenAtten"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.radiant.rpl.testa.Testinstruction"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.radiant.rpl.testa.BatchSelection"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.radiant.rpl.testa.Welcome_page"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.radiant.rpl.testa.SignInAct"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.radiant.rpl.testa.Reverify"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.radiant.rpl.testa.ExamSection.Testviva"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait"
            />

        <activity
            android:name="com.radiant.rpl.testa.MainActivity"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait"
            />

        <activity android:name="com.radiant.rpl.testa.Registration_Done"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.radiant.rpl.testa.Start_Registration"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>